<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro
http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet  id="04-ct-photo"  author="pavel">
        <preConditions  onFail="HALT">
            <not>
                <tableExists tableName="pb_photo"/>
            </not>
        </preConditions>
        <createTable  tableName="pb_photo">
            <column  name="id"  type="BIGINT" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="author_user_id"  type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column  name="post_id"  type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column  name="file_name"  type="VARCHAR(250)">
                <constraints  nullable="false"/>
            </column>
            <column  name="file_body"  type="BLOB">
                <constraints  nullable="false"/>
            </column>
        </createTable>
        <comment>таблица фотографий</comment>
        <rollback>
            <dropTable tableName="pb_photo"/>
        </rollback>
    </changeSet>
</databaseChangeLog>