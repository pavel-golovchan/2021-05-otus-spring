<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro
http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet  id="06-ct-post_liked_users"  author="pavel">
        <preConditions  onFail="HALT">
            <not>
                <tableExists tableName="post_liked_users"/>
            </not>
        </preConditions>
        <createTable  tableName="post_liked_users">
            <column  name="post_id"  type="BIGINT" >
                <constraints  nullable="false"/>
            </column>
            <column  name="liked_users"  type="TEXT">
                <constraints  nullable="false"/>
            </column>
        </createTable>
        <comment>таблица лайков по посту</comment>
        <rollback>
            <dropTable tableName="post_liked_users"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
